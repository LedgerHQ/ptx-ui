{
  "name": "@ledgerhq/ptx-ui",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Internal React component library for PTX live apps",
  "repository": {
    "type": "git",
    "url": "https://github.com/LedgerHQ/ptx-ui.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "lint": "eslint .",
    "format": "npx prettier . --check",
    "format:fix": "pnpm exec prettier . --write",
    "test": "jest",
    "test:coverage": "pnpm jest --coverage",
    "test-a11y": "test-storybook",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --exit-zero-on-changes",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,js,ts,jsx,tsx,html}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@ledgerhq/react-ui": "^0.16.0",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@storybook/addon-a11y": "^8.6.1",
    "@storybook/addon-essentials": "^8.6.1",
    "@storybook/addon-viewport": "^8.6.2",
    "@storybook/react": "^8.6.1",
    "@storybook/react-vite": "^8.6.1",
    "@storybook/test-runner": "^0.21.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/rollup-plugin-peer-deps-external": "^2.2.5",
    "@types/styled-components": "^5.1.34",
    "axe-playwright": "^2.1.0",
    "chromatic": "^11.26.1",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.4.3",
    "playwright": "^1.50.1",
    "prettier": "^3.5.2",
    "react": "^18",
    "react-dom": "^18",
    "rollup": "^4.34.8",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "storybook": "^8.6.1",
    "styled-components": "^5.3.3",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.24.1"
  },
  "peerDependencies": {
    "@ledgerhq/react-ui": ">=0.16.0",
    "react": ">=18",
    "react-dom": ">=18",
    "styled-components": "^5.3.3"
  },
  "packageManager": "pnpm@10.4.1"
}
